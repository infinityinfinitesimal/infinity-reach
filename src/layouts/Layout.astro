---
const {
  title = 'Infinity Reach',
  metaTitle,
  metaDescription,
} = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{metaTitle || title}</title>

    {metaDescription && (
      <meta name="description" content={metaDescription} />
    )}
  </head>

  <body>
    <header style="padding: 20px; border-bottom: 1px solid #ddd;">
      <nav style="display: flex; gap: 16px;">
        <a href="/">Home</a>
        <a href="/about">About</a>
        <a href="/services">Services</a>
      </nav>
    </header>

    <main style="padding: 40px;">
      <slot />
    </main>
  </body>
</html>